<div id='micropost-<%= micropost.id %>' class='micropost-card'>
  <h3><%= micropost.title %>
    <small>
      by <%= link_to micropost.user.username, micropost.user %>
    </small>
  </h3>
  
  <% if micropost.picture %>
    <%= image_tag(micropost.picture, class: 'text-enter micropost-img') %>
  <% end %>
  </br>
  
  <%= micropost.content %>
  </br>
  <small>
    <%=raw tag_links(micropost.all_tags)%>
    </br>
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </small>
</div>