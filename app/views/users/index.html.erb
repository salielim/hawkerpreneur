<div class="container-fluid bg-1 text-center">
  <h1 class="margin">Community Members</h1>

  <div>
    <% @users.each do |user| %>
      <div>
        <% if user.image %>
          <%= image_tag user.image %>
        <% end %>
        <%= user.username %>
        <%= link_to '(view posts)', user %> 
        | 
        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
        <%= user.email %>
      </div>
    <% end %>
  </div>
</div>