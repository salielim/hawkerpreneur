<div class="container-space">
  <div class="row">
    <aside class="col-md-4">
      <section>
        <h1>
          <%= @user.username %>
        </h1>
        <%= image_tag @user.image %>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol>
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>
</div>