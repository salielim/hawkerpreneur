<div class="container-fluid container-space bg-1 text-center">
  <div class="row">
    <section>
      <h1 class="margin">
        <%= @user.username %>
      </h1>
      <% if @user.image %>
        <%= image_tag @user.image %>
      <% end %>
    </section>
    <% if @user.microposts.any? %>
      <h3>Posts (<%= @user.microposts.count %>)</h3>
      <ol>
        <%= render @user.microposts %>
      </ol>
    <% end %>
    <%= link_to 'Go back', '/users' %> 
  </div>
</div>